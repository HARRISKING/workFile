
.box-head{
  height: 180px;
  background: #fff;
  display: flex;
}

.box{
  display: flex;
  align-items: center;
  justify-content: center;
}

.box1{
  width: 40%;
}

.box2{
  width: 60%;
}

.box2-innerbox{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.box2-innerbox .price{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80px;
  color: rgb(248, 156, 13);
  font-weight: bold;
}

.box2-innerbox .price .word-price{
  font-size: 45px;
}

.box2-innerbox>h1{
  font-size:20px;
}

.box-footer{
  padding: 10px;
  line-height: 26px;
  color: #999;
  font-size: 14px;
}
