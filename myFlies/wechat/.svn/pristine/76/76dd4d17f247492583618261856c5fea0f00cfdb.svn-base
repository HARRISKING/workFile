
$('.star').on('click',function(){
  var idx = $('.star').index($(this));
  $('#stars').val(idx);
  var idxs = idx + 1;
  wid = '40px idxs*40px'


  if(idx===0){
    $('.assess').text('（差）');
  }else if(idx===1){
    $('.assess').text('（较差）');
