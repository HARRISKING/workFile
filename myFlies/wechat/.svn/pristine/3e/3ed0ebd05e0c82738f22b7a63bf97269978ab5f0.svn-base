.panel1{
  background-color: #fff;
  width: 100%;
  border-bottom: 2px solid #eee;
}

section:last-of-type{
  margin-bottom: 15px;
}

.box1{
  display: flex;
}

.box1>img{
  height: 70px;
  margin: 10px;
}

.box2{
  width:100%;
  margin: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.box2 p{
  font-size: 13px;
  color: #999;
  line-height: 18px;
  height:  36px;
  overflow-y: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}

.box3{
  display: flex;
  justify-content: space-between;
}

.box3 img{
  width: 15px;
  height: 15px;

}
