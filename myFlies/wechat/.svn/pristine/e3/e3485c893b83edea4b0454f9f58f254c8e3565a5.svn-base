<div class="bdc-modal">
    <div class="setting-form">
        <form name="set-form">
            <table>
                <tr>
                    <td>直播标题</td>
                    <td>
                        <input type="text" name="title">
                    </td>
                </tr>
                <tr>
                    <td>直播封面</td>
                    <td>
                        <input type="text" name="cover">
                    </td>
                </tr>
                <tr>
                    <td>是否允许私密</td>
                    <td>
                        <input type="checkbox" name="enable_private">
                    </td>
                </tr>
                <tr>
                    <td>私密直播价格</td>
                    <td>
                        <input type="num" name="private_price">金币/分钟</td>
                </tr>
                <tr>
                    <td>公告</td>
                    <td>
                        <textarea name="notice" id="" cols="30" rows="10">公告</textarea>
                    </td>
                </tr>
                <tr>
                    <td>公告2</td>
                    <td>
                        <textarea name="notice2" id="" cols="30" rows="10"></textarea>
                    </td>
                </tr>
                <tr>
                    <td><button type="button">取消</button></td>
                    <td><button type="button">提交</button></td>
                </tr>
            </table>
        </form>
    </div>
</div>
<script src='./js/jquery.min.js'></script>
<script>
var i = 0
$(".top-chat-list").find("li").on('click', function() {
    var _type = $(this).attr('list-type')
    $(".chat-section>div").not(".chat-send-box").hide().each(function(e) {
        if ($(this).attr("chat-type") == _type) {
            $(this).show()
        }
    })
})
</script>
</body>

