.order-info {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 10px;
	margin-bottom: 10px;
	height: 70px;
	background-color: #fff;
}

.info-left-img {
	width: 70px;
	height: 70px;
	border: 1px solid #eee;
}

.info-left {
	display: flex;
}

.info-left-img {
	margin-right: 10px;
}

.info-left-msg {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	height: 70px;
}

.info-right {
	display: flex;
	justify-content: flex-end;
	align-items: flex-end;
	height: 100%;
	color: #666;
	font-size: 12px;
}

.msg-title {
	font-size: 16px;
	color: #333;
}

.msg-mark {
	margin-left: 10px;
	font-size: 16px;
	color: #2168a4;
}

.msg-type {
	font-size: 13px;
	color: #2168a4;
}

.msg-fee {
	font-size: 14px;
	color: #666;
}

.msg-fee-num {
	color: #f89c0d;
	font-size: 14px;
}

.info-left-l {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	min-height: 35px;
}

.order-content {
	background-color: #fff;
	color: #333;
}

.content-title {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 10px;
	border-bottom: 1px solid #eee;
	height: 20px;
}

.content-title-name {
	font-size: 15px;
}

.content-title-fee {
	color: #f89c0d;
	font-size: 15px;
}

.content-list {
	padding: 10px;
	margin-bottom: 10px;
	background-color: #fff;
}

.content-list ul li {
	height: 20px;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 5px 0;
}

.list-name {
	font-size: 14px;
	color: #777;
}

.list-type {
	font-size: 13px;
	color: #999;
}

.list-num {
	font-size: 13px;
    color: #666;
    min-width: 50px;
    display: inline-block;
    text-align: right;
}

.list-done {
	padding: 2px 4px;
	font-size: 12px;
	color: #fff;
	background-color: #f89c0d;
	border: 0;
	border-radius: 5px;
}
