

.icon{
	display: block;
	width: 20px;
	height: 20px;
	background: url(../img/common/back.png) no-repeat;
	background-size: contain;
}

.contact{
  display: flex;
  justify-content: space-between;
  background-color: rgb(50, 102, 204);
	margin-bottom: 10px;
}
.info{
  display: flex;
}

.info img{
  width: 70px;
  height: 70px;
  margin: 5px 0 5px 5px;
}

.btn{
  height: 80px;
  width: 70px;
  background-color: rgb(254, 138, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn a{
	text-align: center;
}
.btn img{
  height: 25px;
  margin: 0;
}

.btn p{
	font-size: 12px;
	margin-top: 10px;
}
.info .tel{
  margin: 5px 5px 5px 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
	color: #fff;
	font-size: 12px;
}

.pay-footer {
		position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 50px;
    border-top: 1px solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 14px;
		margin-bottom: 10px;
}

.btn1{
	width: 40%;
	height: 40px;
	border-radius: 4px;
	margin: 10px;
	display: flex;
	justify-content: center;
	align-items: center;
}
.cancel{
	background-color: #fff;
}
.cancel a{
	color: rgb(248, 156, 13);
}
.pay-now{
	background-color: rgb(248, 156, 13);
}

