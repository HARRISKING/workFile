html {
    max-width: 500px;
    min-width: 320px;
    margin: 0 auto;
    font-size: 16px;
    font-family: Helvetica, "Microsoft YaHei";
}

body {
    background-color: #eeeeee;
}

img {
    display: block;
    width: 100%;
}

a {
    text-decoration: none;
}


/*  取消选中边框*/

* {
    -moz-user-select: none;
    -o-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

input,
textarea,
button,
a {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

/**anti-cheat**/

section {
    font-size: .85rem;
    color: #333;
    background-color: #fff;
}

p {
    padding: .5rem 0;
    line-height: 1.4rem;
}

.banner-content {
    padding: .5rem 1.5rem;
}

.title {
    padding: 0 .8rem;
    margin: 1rem .6rem .5rem .6rem;
    font-size: 1rem;
    line-height: 1rem;
    color: #e98390;
    border-left: 2px solid #e98390;
}

.item {
    padding-left: 1.5rem;
}

.item p {
    padding-right: 1.5rem;
}

.yellow-border-top {
    padding-top: 1rem;
    border-top: 1px dotted #e665b7; 
}

.yellow-border-bottom {
    padding-top: 1rem;
    border-bottom: 1px dotted #5ab8fe; 
}

.display {
    border: 1px solid #eee;
    margin: 4px 0px 20px 0px;
}

.yellow-border-top:first-letter {
    font-size: 1.5rem;
    color: #e665b7;
}

.divide {
    border-top: 5px dotted #e665b7;
}